# Example agent configuration
api_url: http://localhost:3001
name: my-windows-agent
registration_secret: your-agent-secret-here
heartbeat_interval: 30
job_timeout: 3600

# Scripts directory - path to the scripts repository root
# Script manifests have 'path' fields like "scripts/repro_deploy_example.ps1"
# This should point to the repo root (the parent directory of 'scripts' folder)
scripts_dir: ../scripts-repo-example

# Output sanitization (remove sensitive data from logs)
sanitize_output: true

# Custom sanitization patterns (regex)
# Leave empty to use default patterns for passwords, API keys, tokens, etc.
sanitize_patterns: []
  # - 'custom_secret_pattern_here'
  # - 'another_pattern_here'
